{
  "name": "test-suites",
  "private": true,
  "description": "Common test suites for Craby",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "prepack": "yarn build",
    "typecheck": "tsc --noEmit",
    "build": "tsdown"
  },
  "devDependencies": {
    "craby-test": "workspace:*",
    "tsdown": "^0.15.2",
    "typescript": "^5.9.2"
  },
  "peerDependencies": {
    "craby-test": "*"
  }
}
